---
export const prerender = false;

export async function getStaticPaths() {
	return [{ params: { lang: 'en' } }, { params: { lang: 'es' } }];
}

import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

// Import new redesigned components
import AboutHero from '../../components/about/AboutHero.astro';
import OurValues from '../../components/about/OurValues.astro';
import OurHistory from '../../components/about/OurHistory.astro';

const { lang } = Astro.params || { lang: 'en' };

if (lang && typeof lang === 'string' && !['en', 'es'].includes(lang)) {
	return new Response(null, {
		status: 404,
		statusText: 'Not Found',
	});
}

const t = useTranslations(lang as 'en' | 'es');
---

<Layout title={t('about.seo.title')} description={t('about.seo.description')} lang={lang}>
	<main id="main-content">
		<AboutHero lang={lang} />

		<OurValues lang={lang} />

		<OurHistory lang={lang} />
	</main>
</Layout>
