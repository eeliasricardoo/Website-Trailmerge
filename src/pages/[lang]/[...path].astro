---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/shared/Button.astro';
import { ui } from '../../i18n/utils';

export const prerender = false;

const { lang } = Astro.params;
// Ensure lang is valid, otherwise default to en
const currentLang = lang && ['en', 'es'].includes(lang) ? lang : 'en';
const t = ui[currentLang as 'en' | 'es']['404'];

Astro.response.status = 404;
---

<Layout title={t.title} description={t.description} lang={currentLang}>
	<div class="not-found-container">
		<div class="content">
			<h1 class="title">{t.title}</h1>
			<p class="description">{t.description}</p>
			<Button href={`/${currentLang}/`} variant="primary">{t.cta}</Button>
		</div>
	</div>
</Layout>

<style>
	.not-found-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 70vh;
		text-align: center;
		padding: 2rem;
	}

	.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	.title {
		font-family: 'Young Serif', serif;
		font-size: 3rem;
		color: var(--Brand-SecondaryBrown, #54504b);
		margin: 0;
	}

	.description {
		font-family: 'DM Sans', sans-serif;
		font-size: 1.25rem;
		color: var(--Brand-SecondaryBrown, #54504b);
		max-width: 600px;
		margin: 0;
	}
</style>
