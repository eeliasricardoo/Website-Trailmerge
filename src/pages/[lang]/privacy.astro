---
// SSR mode - getStaticPaths required for dynamic routes even in SSR mode
export const prerender = false;

export async function getStaticPaths() {
	return [{ params: { lang: 'en' } }, { params: { lang: 'es' } }];
}

import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

const { lang } = Astro.params || { lang: 'en' };
const t = useTranslations(lang as 'en' | 'es');

// SEO keywords
const keywords = t('privacy.seo.keywords');

const currentDate = new Date().toLocaleDateString(lang === 'en' ? 'en-US' : 'es-ES', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<Layout
	title={t('privacy.seo.title')}
	description={t('privacy.seo.description')}
	lang={lang}
	schemaType="article"
>
	<div class="privacy-page-container">
		<div class="privacy-content-wrapper">
			<div class="privacy-header">
				<h1>{t('privacy.title')}</h1>
				<div class="spacer-l"></div>
				<p class="last-updated">{t('privacy.lastUpdated')}: {currentDate}</p>
			</div>

			<div class="privacy-body">
				<div set:html={t('privacy.content')} />
			</div>
		</div>
	</div>
</Layout>

<style>
	.privacy-page-container {
		width: 100%;
		min-height: 100vh;
		padding: 120px 20px 80px;
		display: flex;
		justify-content: center;
	}

	.privacy-content-wrapper {
		max-width: 800px;
		width: 100%;
		background: rgba(255, 255, 255, 0.5);
		backdrop-filter: blur(10px);
		border-radius: 24px;
		padding: 48px;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.privacy-header {
		margin-bottom: 40px;
		text-align: center;
	}

	h1 {
		font-family: 'Young Serif', serif;
		font-size: 48px;
		line-height: 1.2;
		color: #2e3a33;
		margin-bottom: 16px;
	}

	.last-updated {
		font-family: 'DM Sans', sans-serif;
		font-size: 16px;
		color: #5c6b62;
	}

	.privacy-body {
		font-family: 'DM Sans', sans-serif;
		font-size: 18px;
		line-height: 1.8;
		color: #2e3a33;
		white-space: pre-line;
	}

	.privacy-body :global(a) {
		color: #2e3a33;
		text-decoration: underline;
		font-weight: 500;
		transition: opacity 0.2s ease;
	}

	.privacy-body :global(a:hover) {
		opacity: 0.7;
	}

	.privacy-body :global(h3) {
		font-size: 18px;
		font-weight: 700;
		margin-top: 32px;
		margin-bottom: 16px;
		color: #2e3a33;
	}

	@media (max-width: 768px) {
		.privacy-page-container {
			padding-top: 100px;
			padding-bottom: 40px;
		}

		.privacy-content-wrapper {
			padding: 24px;
		}

		h1 {
			font-size: 36px;
		}

		.privacy-body {
			font-size: 16px;
		}
	}
</style>
