---
import Layout from '../layouts/Layout.astro';

// Default to English for the generic 404 page
const lang = 'en';
---

<Layout
	title="Page Not Found | Trailmerge"
	description="The page you are looking for does not exist."
	lang={lang}
>
	<section class="error-container">
		<div class="content">
			<h1>404</h1>
			<h2>Page Not Found</h2>
			<p>Sorry, the page you are looking for doesn't exist or has been moved.</p>
			<div class="actions">
				<a href="/en/" class="btn primary">Go Home</a>
				<a href="/es/" class="btn secondary">Ir al Inicio (Espa√±ol)</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.error-container {
		min-height: 70vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 0 20px;
		margin-top: 80px; /* Account for navbar */
	}

	.content {
		max-width: 600px;
	}

	h1 {
		font-family: 'Young Serif', serif;
		font-size: 120px;
		color: #54504b;
		margin: 0;
		line-height: 1;
	}

	h2 {
		font-family: 'Young Serif', serif;
		font-size: 48px;
		color: #54504b;
		margin: 20px 0;
	}

	p {
		font-family: 'DM Sans', sans-serif;
		font-size: 18px;
		color: #54504b;
		margin-bottom: 40px;
	}

	.actions {
		display: flex;
		gap: 20px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		padding: 12px 24px;
		border-radius: 8px;
		text-decoration: none;
		font-family: 'DM Sans', sans-serif;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.btn.primary {
		background-color: #54504b;
		color: #fff;
	}

	.btn.primary:hover {
		background-color: #3d3a36;
	}

	.btn.secondary {
		border: 1px solid #54504b;
		color: #54504b;
	}

	.btn.secondary:hover {
		background-color: #f5f5f5;
	}
</style>
