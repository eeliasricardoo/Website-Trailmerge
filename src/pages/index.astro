				<a href="/blog" id="nav-blog" class="nav-link">Blog</a>
				<div class="navbar-button-wrapper">
					<a href="#" id="nav-contact" class="open-modal button navbar-button">Contact Us</a>
				</div>
			</nav>
			<div class="menu-button">
				<div class="icon"></div>
			</div>
		</div>
	</div>

	<!-- Hero Section -->
	<div class="body-block hero-wrapper home-hero">
		<div class="content-container">
			<div class="hero">
				<div class="flex-half-right">
					<h1>Elevate your product's design</h1>
					<div class="spacer-m"></div>
					<h3>Take the path to best-in-class UX for SaaS & enterprise apps</h3>
					<div class="spacer-m"></div>
					<a id="hero-contact" href="#" class="open-modal button">Request A Consult</a>
				</div>
				<div class="hero-illustration-wrapper">
					<div class="hero-illustration"></div>
				</div>
			</div>
		</div>
	</div>

	<!-- Aside Section -->
	<div class="body-block aside-wrapper">
		<div class="aside-center-container">
			<div class="aside-center">
				<div class="div-block-17">
