import MagnifyingGlassIcon from '../assets/images/Illustration---Magnifying-Glass.svg';
import CaribinerIcon from '../assets/images/Illustration---Caribiner.svg';
import BannerTag from '../assets/images/BannerTag.png';
import BannerTagLeft from '../assets/images/BannerTagLeft.png';
import AchieveItLogo from '../assets/images/AchieveIt-Logo.svg';
