---
// This page is handled by middleware.ts which redirects to /en/ or /es/
// based on the user's Accept-Language header
// Client-side fallback is provided for static builds
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Redirecting...</title>
	<meta name="robots" content="noindex, nofollow">
	<script is:inline>
		// Client-side language detection fallback
		(function() {
			// Detect browser language
			const browserLang = navigator.language || navigator.userLanguage || 'en';
			const prefersSpanish = browserLang.toLowerCase().startsWith('es');
			
			// Redirect based on browser language
			window.location.href = prefersSpanish ? '/es/' : '/en/';
		})();
	</script>
</head>
<body>
	<p>Redirecting...</p>
</body>
</html>

