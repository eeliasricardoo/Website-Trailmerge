import StaatLogo from '../assets/images/Staat-Logo.svg';
import TourialLogo from '../assets/images/Tourial-Logo.svg';
import UserIQLogo from '../assets/images/UserIQ-Logo.svg';
import SeanHeadshot from '../assets/images/Sean-Headshot.png';
import AndyHeadshot from '../assets/images/Andy-Headshot.png';
import DesignAuditImage from '../assets/images/Design-Audit-Image.png';
