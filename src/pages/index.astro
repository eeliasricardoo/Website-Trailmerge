<Layout>
	<!-- Navigation -->
	<div class="navigation">
		<div class="navigation-container-full">
			<a href="/" id="nav-logo" aria-current="page" class="brand">
				<img src={TrailmergeLogo.src} alt="Trailmerge Logo" class="logo nav-logo" />
			</a>
			<nav class="nav-menu-green">
