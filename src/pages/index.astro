// This page redirects to /en/ or /es/ based on the user's browser language
// Required by Astro i18n for root redirect to default locale
// The middleware handles the redirect, but we need this file for Astro i18n
// If middleware doesn't catch it, redirect to default locale
const acceptLanguage = Astro.request.headers.get('accept-language') || '';
const prefersSpanish = acceptLanguage.toLowerCase().includes('es');
const redirectUrl = prefersSpanish ? '/es/' : '/en/';

return Astro.redirect(redirectUrl, 302);
