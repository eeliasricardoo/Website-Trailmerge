			<div class="spacer-xl"></div>
			<div class="grid-5">
				<div class="item-block">
					<img src={AchieveItLogo.src} loading="lazy" alt="" class="logo" />
				</div>
				<div class="item-block">
					<img src={LoanShoutLogo.src} loading="lazy" alt="" class="logo" />
				</div>
				<div class="item-block">
					<img src={StaatLogo.src} loading="lazy" alt="" class="logo" />
				</div>
				<div class="div-block-35"></div>
				<div class="item-block">
					<img src={TourialLogo.src} loading="lazy" alt="" class="logo" />
				</div>
