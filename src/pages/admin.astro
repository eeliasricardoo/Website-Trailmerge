---
// Static page that won't be captured by i18n
// This page redirects to the StudioCMS dashboard
export const prerender = false;

// StudioCMS default route is /dashboard (when no override is set)
const dashboardRoute = '/dashboard';
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Redirecting to Admin Dashboard...</title>
	<meta http-equiv="refresh" content={`0;url=${dashboardRoute}/`}>
	<script is:inline>
		// Immediate redirect
		window.location.replace('/dashboard/');
	</script>
</head>
<body>
	<p>Redirecting to admin dashboard...</p>
	<p>If you are not redirected, <a href="/dashboard/">click here</a>.</p>
</body>
</html>

