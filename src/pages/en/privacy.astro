---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import ContactModal from '../../components/ContactModal.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

// SEO keywords and breadcrumbs
const keywords = t('privacy.seo.keywords');
const breadcrumbs = [
	{ name: "Home", url: "https://trailmerge.com/en/" },
	{ name: "Privacy Policy", url: "https://trailmerge.com/en/privacy/" }
];

const currentDate = new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
---

<Layout
	title={t('privacy.seo.title')}
	description={t('privacy.seo.description')}
	keywords={keywords}
	breadcrumbs={breadcrumbs}
	lang={lang}
>
	<Navbar lang={lang} />

	<main id="main-content">
		<div class="body-block">
			<div class="content-container">
				<div class="privacy-page">
					<div class="privacy-header">
						<h1>{t('privacy.title')}</h1>
						<div class="spacer-l"></div>
						<p class="help-text">{t('privacy.lastUpdated')}: {currentDate}</p>
						<div class="spacer-2xl"></div>
					</div>

					<div class="privacy-content">
						<p>{t('privacy.content')}</p>
					</div>
				</div>
			</div>
		</div>
	</main>

	<Footer lang={lang} />

	<ContactModal lang={lang} />
</Layout>

<style>
	.privacy-page {
		max-width: 800px;
		margin: 0 auto;
		text-align: left;
	}

	.privacy-header {
		margin-bottom: 0;
		padding-top: 48px;
	}

	.privacy-header h1 {
		margin-bottom: 0;
	}

	.privacy-content {
		margin-top: 0;
	}

	.privacy-content p {
		margin: 0;
		font-size: 16px;
		line-height: 1.8;
		color: var(--grey-5);
		white-space: pre-line;
	}

	.privacy-content a {
		color: var(--green-700);
		text-decoration: underline;
	}

	.privacy-content a:hover {
		color: var(--green-900);
	}

	@media (max-width: 768px) {
		.privacy-page {
			padding: 0 20px;
		}

		.privacy-header {
			padding-top: 32px;
		}
	}
</style>

