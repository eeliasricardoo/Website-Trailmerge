---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import SEOHead from '../components/shared/SEOHead.astro';
import SEOSchema from '../components/shared/SEOSchema.astro';
import { useTranslations } from '../i18n/utils';
import { getAlternateUrls } from '../utils/routeMapping';
import { safeCreateURL } from '../utils/urlHelpers';
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	lang?: string;
	canonicalURL?: string;
	schemaType?: 'organization' | 'article' | 'website';
	articleData?: any; // Define more strictly if needed
	navTheme?: 'default' | 'glass' | 'solid-glass';
}

const {
	title,
	description,
	lang = 'en',
	canonicalURL: providedCanonicalURL,
	schemaType = 'organization',
	articleData,
	navTheme = 'default',
} = Astro.props;

// Use safe URL creation for cross-platform compatibility (Windows/Mac)
const canonicalURL =
	providedCanonicalURL ||
	safeCreateURL(Astro.url.pathname, Astro.site, Astro.url.origin || 'https://trailmerge.com');

const t = useTranslations(lang as 'en' | 'es');
const siteHref =
	Astro.site?.href || (Astro.url.origin ? `${Astro.url.origin}/` : 'https://trailmerge.com/');
const alternateUrls = getAlternateUrls(Astro.url.pathname, siteHref);
const isStaging =
	Astro.site?.hostname === 'staging.trailmerge.com' ||
	Astro.url.hostname === 'staging.trailmerge.com';
const htmlLang = lang === 'es' ? 'es' : 'en-US';

// Default SEO values if not provided
const pageTitle = title || t('homepage.seo.title');
const pageDescription = description || t('homepage.seo.description');
---

<!doctype html>
<html lang={htmlLang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/x-icon" href="/images/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<SEOHead
			title={pageTitle}
			description={pageDescription}
			canonicalURL={canonicalURL}
			lang={lang}
			alternateUrls={alternateUrls}
			isStaging={isStaging}
		/>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Young+Serif&family=Bitter:ital,wght@0,400;0,500;0,700;1,400&family=Roboto:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>

		<!-- Preconnect to Copper Forms for faster loading -->
		<link rel="preconnect" href="https://forms.copper.com" />
		<link rel="dns-prefetch" href="https://forms.copper.com" />

		<SEOSchema
			type={schemaType}
			pageTitle={pageTitle}
			pageDescription={pageDescription}
			articleData={articleData}
		/>

		<!-- Cookie Consent - Silktide (async loading) -->
		<link
			rel="stylesheet"
			type="text/css"
			href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css"
			media="print"
			onload="this.media='all'"
		/>
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js"
			async
			data-cfasync="false"></script>

		<ViewTransitions />
	</head>
	<body>
		<Navbar lang={lang} theme={navTheme} />
		<main id="main-content">
			<slot />
			<Footer lang={lang} />
		</main>

		<script>
			// Initialize parallax if needed globally, or keep it per page if specific
			import '../scripts/parallax';
			import { initCookieConsent } from '../scripts/cookieConsent';

			// Get language from HTML tag
			const htmlLang = document.documentElement.lang;
			const lang = htmlLang === 'es' || htmlLang === 'es-ES' ? 'es' : 'en';

			// Initialize cookie consent on load
			window.addEventListener('load', () => {
				initCookieConsent(lang);
			});
		</script>
	</body>
</html>

<style is:global>
	html {
		width: 100%;
		min-height: 100vh;
		background:
			radial-gradient(
				256.09% 112.04% at 96.63% 6.02%,
				rgba(255, 255, 255, 0) 0%,
				rgba(46, 58, 51, 0.08) 100%
			),
			url('/images/new/home/dot-pattern.svg'),
			radial-gradient(283.15% 146.1% at 13.24% 9.21%, #faefe0 0%, #ccbba3 100%);
		background-size:
			100% 100%,
			9.24px 9.24px,
			100% 100%;
		background-position:
			center,
			0 0,
			center;
		background-repeat: no-repeat, repeat, no-repeat;
		background-attachment: fixed, fixed, fixed;
	}

	body {
		width: 100vw;
		min-height: 100vh;
		overflow-x: hidden;
		position: relative;
		background:
			radial-gradient(
				256.09% 112.04% at 96.63% 6.02%,
				rgba(255, 255, 255, 0) 0%,
				rgba(46, 58, 51, 0.08) 100%
			),
			url('/images/new/home/dot-pattern.svg'),
			radial-gradient(283.15% 146.1% at 13.24% 9.21%, #faefe0 0%, #ccbba3 100%);
		background-size:
			100% 100%,
			9.24px 9.24px,
			100% 100%;
		background-position:
			center,
			0 0,
			center;
		background-repeat: no-repeat, repeat, no-repeat;
		background-attachment: fixed, fixed, fixed;
	}

	#main-content {
		width: 100%;
		position: relative;
		overflow: hidden;
		clip-path: inset(0 0 0 0);
		display: flex;
		flex-direction: column;
	}
</style>
