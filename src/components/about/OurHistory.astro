---
import { useTranslations } from '../../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');
---

<!-- Our History Section -->
<div class="our-history-new-wrapper">
	<img
		src="/images/new/home/recent-projects/background-lines.svg"
		alt=""
		class="background-lines"
		loading="lazy"
	/>
	<div class="our-history-new-container">
		<div class="our-history-new-image">
			<img
				src="/images/new/about/history.png"
				alt="Team collaboration"
				class="history-image"
				loading="lazy"
			/>
		</div>
		<div class="our-history-new-content">
			<h2 class="our-history-new-title">{t('aboutNew.history.title')}</h2>
			<div class="our-history-new-text">
				<p set:html={t('aboutNew.history.p1')} />
				<p set:html={t('aboutNew.history.p2')} />
				<p set:html={t('aboutNew.history.p3')} />
			</div>
		</div>
	</div>
</div>

<style>
	.our-history-new-wrapper {
		width: 100%;
		padding: 0 20px 124px 20px;
		margin-top: 66px;
		background-color: transparent;
		display: flex;
		justify-content: center;
		position: relative;
		z-index: 10;
		overflow: hidden;
	}

	.background-lines {
		position: absolute;
		top: -350px;
		left: 50%;
		transform: translateX(-50%);
		width: 150%;
		height: auto;
		min-width: 2100px;
		z-index: -1;
		pointer-events: none;
		opacity: 1;
	}

	.our-history-new-container {
		width: 100%;
		max-width: 1200px;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 64px;
		align-items: center;
	}

	.our-history-new-image {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.history-image {
		width: 400px;
		height: 400px;
		max-width: 100%;
		object-fit: cover;
		border-radius: 8px;
		display: block;
	}

	.our-history-new-content {
		display: flex;
		flex-direction: column;
		gap: 24px;
	}

	.our-history-new-title {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 56px;
		font-weight: 400;
		line-height: 1.2;
		margin: 0;
	}

	.our-history-new-text {
		margin: 0;
	}

	.our-history-new-text p {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 24px;
		font-style: normal;
		font-weight: 400;
		line-height: 32px;
		text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.25);
		margin: 0 0 16px 0;
	}

	.our-history-new-text p:last-child {
		margin-bottom: 0;
	}

	.our-history-new-text strong {
		font-weight: 700;
	}

	@media (max-width: 1024px) {
		.our-history-new-container {
			gap: 48px;
		}

		.our-history-new-title {
			font-size: 48px;
		}
	}

	@media (max-width: 768px) {
		.our-history-new-wrapper {
			padding: 60px 20px;
		}

		.our-history-new-container {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.our-history-new-image {
			order: 2;
		}

		.our-history-new-content {
			order: 1;
		}

		.our-history-new-title {
			font-size: 40px;
		}

		.our-history-new-text p {
			font-size: 16px;
		}

		.history-image {
			width: 100%;
			height: auto;
			max-width: 400px;
		}
	}

	@media (max-width: 480px) {
		.our-history-new-wrapper {
			padding: 48px 20px;
		}

		.our-history-new-title {
			font-size: 36px;
		}
	}
</style>
