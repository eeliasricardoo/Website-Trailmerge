---
import { Image } from 'astro:assets';

interface Props {
	src: string | ImageMetadata;
	alt: string;
	width?: number;
	height?: number;
	class?: string;
	loading?: 'lazy' | 'eager';
	format?: 'avif' | 'webp' | 'png' | 'jpg';
	quality?: number;
	widths?: number[];
	sizes?: string;
	fetchpriority?: 'high' | 'low' | 'auto';
}

const {
	src,
	alt,
	width,
	height,
	class: className,
	loading = 'lazy',
	format = 'webp',
	quality = 80,
	widths = [400, 800, 1200],
	sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 800px',
	fetchpriority = 'auto',
} = Astro.props;

// Check if src is a string (external URL) or local import
const isExternal =
	typeof src === 'string' && (src.startsWith('http://') || src.startsWith('https://'));
---

{
	isExternal ? (
		<img
			src={src}
			alt={alt}
			width={width}
			height={height}
			class={className}
			loading={loading}
			decoding="async"
			fetchpriority={fetchpriority}
		/>
	) : (
		<Image
			src={src}
			alt={alt}
			width={width}
			height={height}
			widths={widths}
			sizes={sizes}
			class={className}
			loading={loading}
			format={format}
			quality={quality}
			decoding="async"
			fetchpriority={fetchpriority}
		/>
	)
}
