---
// Import images
import TrailmergeLogoGrey from '../assets/images/Trailmerge-Wordmark_Grey-5.svg';

export interface FooterLink {
	text: string;
	url: string;
	target?: string;
}

export interface FooterLinkGroup {
	title: string;
	links: FooterLink[];
}

export interface Props {
	logo?: any;
	address?: string;
	linkGroups?: FooterLinkGroup[];
	copyright?: string;
	ctaButtonText?: string;
	ctaButtonUrl?: string;
}

const {
	logo = TrailmergeLogoGrey,
	addressLines = [
		"3100 Interstate North Circle SE",
		"Suite 200",
		"Atlanta, GA 30339"
	],
	linkGroups = [
		{
			title: "About",
			links: [
				{ text: "Careers", url: "https://trailmerge.breezy.hr/", target: "_blank" },
				{ text: "Privacy", url: "/privacy" }
			]
		},
		{
			title: "Resources",
			links: [
				{ text: "Blog", url: "#" }
			]
		}
	],
	copyright = "Â© 2024 Trailmerge Ltd Co. All rights reserved.",
	ctaButtonText = "Request A Consult",
	ctaButtonUrl = "#"
} = Astro.props;
---

<!-- Footer -->
<footer id="footer" class="footer">
	<div class="content-container">
		<div class="footer-flex-container">
			<div class="footer-logo-area">
				<a href="/" aria-current="page" class="footer-logo-link w--current">
					<img src={logo.src} alt="Trailmerge Wordmark" class="footer-image" />
				</a>
				<div class="spacer-l"></div>
				<div class="help-text">
					{addressLines.map((line) => (
						<div>{line}</div>
					))}
				</div>
				<div class="spacer-xl"></div>
			</div>
			<div class="footer-links-wrapper">
				{linkGroups.map((group, index) => (
					<div class={`footer-links-group ${index === linkGroups.length - 1 ? 'last-item' : ''}`}>
						{group.title === "About" ? (
							<a href="/about" class="footer-heading-link">{group.title}</a>
						) : (
							<h2 class="footer-heading">{group.title}</h2>
						)}
						<div class="spacer-m"></div>
						<ul role="list" class="w-list-unstyled">
							{group.links.map((link) => (
								<li>
									<a href={link.url} class="footer-link" target={link.target || "_self"}>{link.text}</a>
									<div class="spacer-s"></div>
								</li>
							))}
						</ul>
						<div class="spacer-l"></div>
						{index === linkGroups.length - 1 && (
							<a id="footer-contact" href={ctaButtonUrl} class="footer-cta-button open-modal button dark-button">{ctaButtonText}</a>
						)}
					</div>
				))}
			</div>
		</div>
		<div class="help-text">{copyright}</div>
	</div>
</footer>

<style>
	.footer {
		text-align: center;
		background-color: transparent;
		background-image: url('/images/Footer-Background.svg');
		background-position: 0 -160px;
		background-size: auto;
		flex-direction: column;
		justify-content: space-around;
		align-items: center;
		padding: 40px 0;
		display: flex;
	}

	.footer .content-container {
		max-width: 1400px;
	}

	.footer-flex-container {
		text-align: left;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 40px;
		display: flex;
		width: 100%;
		gap: 100px;
	}

	.footer-logo-area {
		flex: 0 0 auto;
		min-width: 240px;
	}

	.footer-links-wrapper {
		flex: 1;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 40px;
		display: flex;
	}

	.footer-links-group {
		flex: 1;
		margin-bottom: 0;
		margin-right: 24px;
	}

	.footer-links-group.last-item {
		margin-right: 0;
	}

	.w-list-unstyled {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-heading-link {
		color: var(--grey-5);
		margin-bottom: 0;
		font-weight: 700;
		text-decoration: none;
		transition: color 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
		display: block;
		font-size: 16px;
	}

	.footer-heading-link:hover {
		color: var(--oregano);
		text-decoration: underline;
	}

	.footer-heading {
		color: var(--grey-5);
		margin-top: 0;
		margin-bottom: 0;
		font-family: Roboto, sans-serif;
		font-size: 16px;
		line-height: 24px;
	}

	.footer-link {
		color: var(--grey-5);
		margin-bottom: 0;
		text-decoration: none;
		display: block;
		font-size: 16px;
	}

	.footer-link:hover {
		text-decoration: underline;
	}

	.footer-image {
		object-position: 0% 50%;
		width: 100%;
		height: auto;
		display: block;
	}

	.help-text {
		color: var(--grey-5);
		font-size: 14px;
		line-height: 1.5;
	}

	.footer-logo-link {
		flex: 0 auto;
		min-width: 60px;
		margin-bottom: 0;
		display: block;
		transition: opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
	}

	.footer-logo-link:hover {
		opacity: 0.6;
	}

	.footer-cta-button {
		width: 100%;
		max-width: 280px;
		padding: 14px 28px;
		font-size: 16px;
		font-weight: 500;
		line-height: 1.5;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		white-space: nowrap;
		vertical-align: middle;
		box-sizing: border-box;
	}

	@media (max-width: 1024px) {
		.footer-logo-area {
			margin-right: 120px;
		}
	}

	@media (max-width: 768px) {
		.footer {
			text-align: left;
			padding-left: 20px;
			padding-right: 20px;
		}

		.footer-flex-container {
			flex-direction: column;
		}

		.footer-logo-link {
			height: 60px;
		}

		.footer-logo-link.w--current {
			height: auto;
		}

		.footer-image {
			width: auto;
			height: 40px;
		}

		.footer-links-wrapper {
			flex-direction: column;
		}

		.footer-logo-area {
			margin-right: 40px;
		}
	}

	@media (max-width: 480px) {
		.footer {
			padding-left: 20px;
			padding-right: 20px;
		}

		.footer-logo-area {
			margin-right: 0;
		}
	}
</style>
