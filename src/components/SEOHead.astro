---
/**
 * SEOHead Component
 * Handles all SEO-related meta tags including Open Graph, Twitter Cards, and hreflang
 */

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	canonicalURL: string;
	lang?: string;
	keywords?: string;
	alternateUrls: {
		en: string;
		es: string;
	};
	isStaging?: boolean;
}

const {
	title = 'UX Design Agency for B2B SaaS Startups â€“ Trailmerge',
	description = 'Scalable SaaS UI/UX services including MVP design, product revamp, and design audits. Schedule a free consultation to get started.',
	ogImage = 'https://uploads-ssl.webflow.com/5f1aca38cd9acd41a07b69f5/616d8bd8b574fcb50a5412be_Home%20Preview%20Image.png',
	canonicalURL,
	lang = 'en',
	keywords,
	alternateUrls,
	isStaging = false,
} = Astro.props;

// Set og:locale based on language
const ogLocale = lang === 'es' ? 'es_ES' : 'en_US';
const htmlLang = lang === 'es' ? 'es' : 'en-US';
---

<!-- SEO Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />
<meta name="author" content="Trailmerge" />
{keywords && <meta name="keywords" content={keywords} />}

<!-- Block crawlers on staging -->
{
	isStaging && (
		<>
			<meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
			<meta name="googlebot" content="noindex, nofollow" />
		</>
	)
}

<!-- Hreflang Tags for Multi-language Support -->
<link rel="alternate" hreflang="en" href={alternateUrls.en} />
<link rel="alternate" hreflang="es" href={alternateUrls.es} />
<link rel="alternate" hreflang="x-default" href={alternateUrls.en} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title="Trailmerge Blog RSS Feed" href="/rss.xml" />

<!-- Open Graph Meta Tags -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:site_name" content="Trailmerge" />
<meta property="og:locale" content={ogLocale} />
{lang === 'es' && <meta property="og:locale:alternate" content="en_US" />}
{lang === 'en' && <meta property="og:locale:alternate" content="es_ES" />}

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@trailmerge" />
<meta name="twitter:creator" content="@trailmerge" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
