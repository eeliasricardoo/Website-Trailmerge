---
export interface Props {
	image: any;
	quote: string;
	author: string;
	position?: string;
	company?: string;
}

const { image, quote, author, position, company } = Astro.props;
---

<!-- Testimonial -->
<div class="body-block quote-block testimonial-section">
	<div class="content-container">
		<div class="quote-wrapper">
			<img src={image.src} loading="lazy" alt={`${author} headshot photo`} class="quote-image" />
			<div class="quote-text-wrapper">
				<blockquote>"{quote}"</blockquote>
				<div class="spacer-m"></div>
				<p class="quote-name">â€” {author}{position && `, ${position}`}{company && ` ${company}`}</p>
			</div>
		</div>
	</div>
</div>

<style>
	.testimonial-section {
		background-color: var(--mint);
		position: relative;
		overflow: hidden;
		padding: 72px 40px;
	}

	.testimonial-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, var(--mint) 0%, var(--aqua-100) 100%);
		opacity: 0.3;
		z-index: 0;
	}

	.testimonial-section .content-container {
		position: relative;
		z-index: 1;
	}

	.quote-wrapper {
		display: flex;
		align-items: center;
		gap: 48px;
		max-width: 1200px;
		margin: 0 auto;
	}

	.quote-image {
		width: 240px;
		height: 240px;
		border-radius: 50%;
		flex-shrink: 0;
		object-fit: cover;
	}

	.quote-text-wrapper {
		flex: 1;
	}

	blockquote {
		font-family: Roboto, sans-serif;
		font-size: 28px;
		font-weight: 600;
		font-style: italic;
		line-height: 38px;
		margin: 0 0 20px 0;
		color: var(--grey-5);
	}

	.quote-name {
		font-family: Roboto, sans-serif;
		font-weight: 500;
		color: var(--grey-4);
		font-size: 18px;
	}

	@media (max-width: 768px) {
		.testimonial-section {
			padding: 48px 20px;
		}

		.quote-wrapper {
			flex-direction: column;
			text-align: center;
			gap: 32px;
		}

		.quote-image {
			width: 180px;
			height: 180px;
		}

		blockquote {
			font-size: 22px;
			line-height: 32px;
		}

		.quote-name {
			font-size: 16px;
		}
	}

	@media (max-width: 480px) {
		.testimonial-section {
			padding: 40px 16px;
		}

		.quote-wrapper {
			gap: 24px;
		}

		.quote-image {
			width: 200px;
			height: 200px;
		}

		blockquote {
			font-size: 20px;
			line-height: 28px;
		}

		.quote-name {
			font-size: 15px;
		}
	}
</style>
