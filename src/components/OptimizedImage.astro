---
import { Image } from 'astro:assets';

interface Props {
	src: string | ImageMetadata;
	alt: string;
	width?: number;
	height?: number;
	class?: string;
	loading?: 'lazy' | 'eager';
	format?: 'avif' | 'webp' | 'png' | 'jpg';
	quality?: number;
}

const {
	src,
	alt,
	width,
	height,
	class: className,
	loading = 'lazy',
	format = 'webp',
	quality = 80,
} = Astro.props;

// Check if src is a string (external URL) or local import
const isExternal = typeof src === 'string' && (src.startsWith('http://') || src.startsWith('https://'));
---

{isExternal ? (
	<img
		src={src}
		alt={alt}
		width={width}
		height={height}
		class={className}
		loading={loading}
		decoding="async"
	/>
) : (
	<Image
		src={src}
		alt={alt}
		width={width}
		height={height}
		class={className}
		loading={loading}
		format={format}
		quality={quality}
		decoding="async"
	/>
)}
