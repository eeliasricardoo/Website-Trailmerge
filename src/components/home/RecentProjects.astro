---
import { useTranslations } from '../../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const projects = [
	{
		title: t('recentProjectsNew.project1.title'),
		description: t('recentProjectsNew.project1.description'),
		image: '/images/new/home/recent-projects/unsplash_sgYamIzhAhg.png',
		alt: t('recentProjectsNew.project1.alt'),
	},
	{
		title: t('recentProjectsNew.project2.title'),
		description: t('recentProjectsNew.project2.description'),
		image: '/images/new/home/recent-projects/unsplash_sgYamIzhAhg-1.png',
		alt: t('recentProjectsNew.project2.alt'),
	},
	{
		title: t('recentProjectsNew.project3.title'),
		description: t('recentProjectsNew.project3.description'),
		image: '/images/new/home/recent-projects/unsplash_sgYamIzhAhg-2.png',
		alt: t('recentProjectsNew.project3.alt'),
	},
];
---

<section class="recent-projects-wrapper" id="projects">
	<img
		src="/images/new/home/recent-projects/background-lines.svg"
		alt=""
		class="background-lines"
		loading="lazy"
	/>
	<div class="recent-projects-container">
		<h2 class="section-title">{t('recentProjectsNew.title')}</h2>
		<div class="projects-grid">
			{
				projects.map((project) => (
					<div class="project-card">
						<div class="image-wrapper">
							<img src={project.image} alt={project.alt} class="project-image" loading="lazy" />
						</div>
						<h3 class="project-title">{project.title}</h3>
						<p class="project-description" set:html={project.description} />
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.recent-projects-wrapper {
		width: 100%;
		margin-top: 120px;
		padding: 0 20px 124px 20px;
		background-color: transparent;
		display: flex;
		justify-content: center;
		position: relative;
		z-index: 10;
		/* overflow: hidden; Removed to allow background to extend */
		clip-path: inset(-2000px 0 -2000px 0);
	}

	.background-lines {
		position: absolute;
		top: -960px;
		left: 50%;
		transform: translateX(-50%);
		width: 190%;
		height: auto;
		min-width: 2500px;
		z-index: -1;
		pointer-events: none;
		opacity: 1;
	}

	.recent-projects-container {
		width: 100%;
		max-width: 1200px;
		text-align: center;
	}

	.section-title {
		color: #54504b;
		text-align: center;
		text-shadow:
			0 -2px 4px rgba(0, 0, 0, 0.25),
			0 2px 4px rgba(255, 255, 255, 0.4);
		font-family: 'Young Serif', serif;
		font-size: 56px;
		font-style: normal;
		font-weight: 400;
		line-height: 64px;
		letter-spacing: 1.68px;
		margin: 0 0 48px 0;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 40px;
		width: 100%;
	}

	.project-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 24px;
	}

	.image-wrapper {
		width: 100%;
		aspect-ratio: 3/2;
		border-radius: 8px;
		overflow: hidden;
	}

	.project-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.project-title {
		color: #54504b;
		text-align: center;
		text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.25);
		font-family: 'Young Serif', serif;
		font-size: 28px;
		font-style: normal;
		font-weight: 400;
		line-height: 36px;
		letter-spacing: 0.84px;
		margin: 0;
	}

	.project-description {
		color: #54504b;
		text-align: center;
		text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.25);
		font-family: 'DM Sans', sans-serif;
		font-size: 24px;
		font-style: normal;
		font-weight: 400;
		line-height: 32px;
		margin: 0;
	}

	/* Responsive Design */
	@media (max-width: 900px) {
		.projects-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 32px;
		}
	}

	@media (max-width: 600px) {
		.recent-projects-wrapper {
			padding: 60px 20px;
		}

		.section-title {
			font-size: 40px;
			margin-bottom: 40px;
		}

		.projects-grid {
			grid-template-columns: 1fr;
			gap: 48px;
		}
	}
</style>
