---
import { useTranslations } from '../i18n/utils';
import DesignAuditImage from '../assets/images/Design-Audit-Image.png';

export interface Props {
	title?: string;
	buttonText?: string;
	buttonUrl?: string;
	image?: any;
	imageWidth?: number;
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const {
	title = t('offer.title'),
	buttonText = t('offer.buttonText'),
	buttonUrl = "https://forms.gle/ufj74gqNJSiabci79",
	image = DesignAuditImage,
	imageWidth = 248
} = Astro.props;
---

<!-- Design Audit Offer -->
<div class="body-block offer-block">
	<div class="content-container">
		<div class="div-block-20">
			<div class="image-text-wrapper">
				<div class="side-content">
					<h3><strong>{title}</strong></h3>
					<div class="spacer-m"></div>
					<a id="audit-button" href={buttonUrl} target="_blank" class="button dark-button">{buttonText}</a>
				</div>
			</div>
			<div class="div-block-21"></div>
			<div class="div-block-22">
				<img src={image.src} loading="lazy" width={imageWidth} alt="SaaS design audit illustration showing product evaluation checklist" class="image-25" />
			</div>
		</div>
	</div>
</div>
