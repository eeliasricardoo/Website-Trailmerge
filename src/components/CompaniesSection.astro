---
import { useTranslations } from '../i18n/utils';

export interface Props {
	title?: string;
	description?: string;
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const {
	title = t('companies.title'),
	description = t('companies.description')
} = Astro.props;
