---
import { useTranslations } from '../i18n/utils';

export interface Props {
	title?: string;
	description?: string;
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const {
	title = t('companies.title'),
	description = t('companies.description')
} = Astro.props;
---

<!-- Companies Section -->
<div class="body-block dark-block">
	<div class="content-container">
		<div class="div-block-18">
			<div class="stacked-title-area">
				<h3 class="light-text"><strong>{title}</strong></h3>
				<div class="spacer-m"></div>
				<div class="side-content">
					<p class="light-text">{description}</p>
				</div>
			</div>
			<div class="div-block-19"></div>
		</div>
		<div class="spacer-xl"></div>
		<div class="companies-grid">
			<div class="item-block">
				<img src="/images/AchieveIt-Logo.svg" loading="lazy" alt="AchieveIt company logo" class="logo" />
			</div>
			<div class="item-block">
				<img src="/images/LoanShout-Logo.svg" loading="lazy" alt="LoanShout company logo" class="logo" />
			</div>
			<div class="item-block">
				<img src="/images/Staat-Logo.svg" loading="lazy" alt="Staat company logo" class="logo" />
			</div>
			<div class="item-block">
				<img src="/images/Tourial-Logo.svg" loading="lazy" alt="Tourial company logo" class="logo" />
			</div>
			<div class="item-block">
				<img src="/images/UserIQ-Logo.svg" loading="lazy" alt="UserIQ company logo" class="logo" />
			</div>
		</div>
	</div>
</div>

<style>
	.companies-grid {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 4rem;
		flex-wrap: wrap;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}

	.companies-grid .item-block {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0;
		background-color: transparent;
		border-radius: 0;
	}

	.companies-grid .logo {
		max-width: 150px;
		height: 40px;
		filter: brightness(0) invert(1);
		opacity: 0.8;
	}

	.div-block-18 {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.stacked-title-area {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	@media (max-width: 768px) {
		.companies-grid {
			gap: 2.5rem;
		}

		.companies-grid .logo {
			max-width: 120px;
			height: 32px;
		}
	}

	@media (max-width: 480px) {
		.companies-grid {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 2rem 1.5rem;
			max-width: 360px;
		}

		.companies-grid .logo {
			max-width: 100px;
			height: 28px;
		}
	}
</style>
