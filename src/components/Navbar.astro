---
// Import images
import TrailmergeLogo from '../assets/images/Trailmerge-Wordmark-Sand.svg';
---

<!-- Navigation -->
<div class="navigation">
	<div class="navigation-container-full">
		<a href="/" id="nav-logo" aria-current="page" class="brand">
			<img src={TrailmergeLogo.src} alt="Trailmerge Logo" class="logo nav-logo" />
		</a>
		<nav class="nav-menu-green">
			<div class="mock-menu-background"></div>
			<a href="/about" id="nav-about" class="nav-link">About</a>
			<a href="/blog" id="nav-blog" class="nav-link">Blog</a>
			<div class="navbar-button-wrapper">
				<a href="#" id="nav-contact" class="open-modal button navbar-button">Contact Us</a>
			</div>
		</nav>
		<div class="menu-button">
			<div class="icon"></div>
		</div>
	</div>
</div>

<script>
	// Mobile menu functionality
	document.addEventListener('DOMContentLoaded', function() {
		const menuButton = document.querySelector('.menu-button');
		const navMenu = document.querySelector('.nav-menu-green');
		
		if (menuButton && navMenu) {
			menuButton.addEventListener('click', function() {
				navMenu.classList.toggle('active');
				menuButton.classList.toggle('active');
			});
		}
	});
</script>

<style>
	/* Navigation Styles */
	.navigation {
		background-color: var(--grey-5);
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
	}

	.navigation-container-full {
		justify-content: space-between;
		align-items: center;
		width: 100%;
		max-width: none;
		height: 64px;
		min-height: auto;
		margin-left: auto;
		margin-right: auto;
		padding: 16px 20px;
		display: flex;
	}

	.brand {
		display: flex;
		align-items: center;
	}

	.logo {
		width: auto;
		height: 32px;
		display: block;
		filter: brightness(0) invert(1);
		border: none;
		outline: none;
	}

	.nav-menu-green {
		color: var(--oregano);
		align-items: center;
		width: auto;
		height: auto;
		display: flex;
		position: static;
		gap: 32px;
	}

	.nav-link {
		color: var(--white);
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.nav-link:hover {
		color: var(--mint);
	}

	.navbar-button-wrapper {
		margin-left: 16px;
	}

	.navbar-button {
		padding: 8px 16px;
		font-size: 14px;
		background-color: var(--mint);
		color: var(--grey-5);
	}

	.navbar-button:hover {
		background-color: var(--green-500);
		color: var(--white);
	}

	/* Mobile menu styles */
	.menu-button {
		display: none;
		flex-direction: column;
		cursor: pointer;
		padding: 8px;
	}

	.menu-button .icon {
		width: 24px;
		height: 2px;
		background-color: var(--white);
		margin: 2px 0;
		transition: all 0.3s ease;
	}

	.menu-button.active .icon:nth-child(1) {
		transform: rotate(45deg) translate(5px, 5px);
	}

	.menu-button.active .icon:nth-child(2) {
		opacity: 0;
	}

	.menu-button.active .icon:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -6px);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.navigation-container-full {
			padding: 0 16px;
		}

		.logo {
			height: 24px;
		}

		.menu-button {
			display: flex;
		}

		.nav-menu-green {
			position: fixed;
			top: 64px;
			left: 0;
			right: 0;
			background-color: var(--grey-5);
			flex-direction: column;
			padding: 20px;
			gap: 20px;
			transform: translateY(-100%);
			transition: transform 0.3s ease;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}

		.nav-menu-green.active {
			transform: translateY(0);
		}

		.navbar-button-wrapper {
			margin-left: 0;
			width: 100%;
		}

		.navbar-button {
			width: 100%;
			text-align: center;
		}
	}
</style>
