---
import { useTranslations } from '../i18n/utils';
import FireIcon from '../assets/images/Illustration---Fire.svg';
import MagnifyingGlassIcon from '../assets/images/Illustration---Magnifying-Glass.svg';
import CaribinerIcon from '../assets/images/Illustration---Caribiner.svg';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

export interface ServiceItem {
	icon: any;
	title: string;
	description: string;
}

const services: ServiceItem[] = [
	{
		icon: FireIcon,
		title: t('services.ignite.title'),
		description: t('services.ignite.description')
	},
	{
		icon: MagnifyingGlassIcon,
		title: t('services.evaluate.title'),
		description: t('services.evaluate.description')
	},
	{
		icon: CaribinerIcon,
		title: t('services.scale.title'),
		description: t('services.scale.description')
	}
];
---

<!-- Services Section -->
<div class="body-block">
	<div class="content-container">
		<div class="items-across">
			{services.map((service, index) => (
				<div class={`item-block ${index === services.length - 1 ? 'item-block-last' : ''}`}>
					<img src={service.icon.src} loading="lazy" alt={`${service.title} icon`} class="item-image" />
					<h4>{service.title}</h4>
					<div class="spacer-s"></div>
					<p>{service.description}</p>
				</div>
			))}
		</div>
	</div>
</div>
