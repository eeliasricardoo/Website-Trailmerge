---
export interface Props {
	title: string;
	date: string;
	author?: {
		name: string;
	};
	category?: string;
}

const { title, date, author, category } = Astro.props;
---

<!-- Post Header Section -->
<div class="post-header-wrapper">
	<div class="post-header-container">
		<h1 class="post-title">{title}</h1>
		<div class="post-meta">
			<span class="post-date">{date}</span>
			{
				author && (
					<>
						<span class="meta-divider"> • </span>
						<span class="post-author">{author.name}</span>
					</>
				)
			}
		</div>
		{
			category && (
				<div class="post-categories">
					{category.split(' • ').map((cat, index, array) => (
						<span class="post-category">
							{cat}
							{index < array.length - 1 && <span class="category-separator"> • </span>}
						</span>
					))}
				</div>
			)
		}
	</div>
</div>

<style>
	.post-header-wrapper {
		width: 100%;
		padding: 40px 24px 24px;
		background: transparent;
		text-align: center;
	}

	.post-header-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-title {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 56px;
		font-weight: 400;
		line-height: 1.2;
		margin: 0 0 24px 0;
		text-align: center;
	}

	.post-meta {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 28px;
		font-weight: 700;
		line-height: 1.5;
		margin: 0 0 8px 0;
		text-align: center;
	}

	.meta-divider {
		margin: 0 4px;
	}

	.post-categories {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 24px;
		font-weight: 300;
		line-height: 1.5;
		margin: 0;
		text-align: center;
	}

	.post-category {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 16px;
		font-weight: 400;
		line-height: 1.5;
	}

	.category-separator {
		margin: 0 4px;
	}

	@media (max-width: 768px) {
		.post-header-wrapper {
			padding: 32px 24px;
		}

		.post-title {
			font-size: 28px;
		}

		.post-meta {
			font-size: 16px;
		}
	}

	@media (max-width: 480px) {
		.post-header-wrapper {
			padding: 24px 16px;
		}

		.post-title {
			font-size: 24px;
		}
	}
</style>
