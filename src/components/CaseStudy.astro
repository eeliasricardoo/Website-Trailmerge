---
export interface Props {
	image: string | any;
	title: string;
	description: string;
	linkText?: string;
	linkUrl?: string;
	imageAlt?: string;
}

const { 
	image, 
	title, 
	description, 
	linkText = "Read More", 
	linkUrl = "#",
	imageAlt = ""
} = Astro.props;

const imageSrc = typeof image === 'string' ? image : image.src;
---

<!-- Case Study -->
<div class="body-block">
	<div class="content-container">
		<img src={imageSrc} loading="lazy" alt={imageAlt || `${title} Screenshots`} class="constrained-full-image" />
		<div class="spacer-xl"></div>
		<div class="side-title-area">
			<div class="side-title">
				<h2>{title}</h2>
			</div>
			<div class="side-content">
				<p>{description}</p>
				{linkText && linkUrl !== "#" && (
					<>
						<div class="spacer-m hidden"></div>
						<a href={linkUrl} class="button hidden">{linkText}</a>
					</>
				)}
			</div>
		</div>
	</div>
</div>

<style>
	.constrained-full-image {
		width: 100%;
		max-width: 800px;
		height: auto;
		display: block;
		margin: 0 auto;
		border-radius: 8px;
	}

	.side-title-area {
		display: flex;
		gap: 16px;
		align-items: center;
		justify-content: center;
		max-width: 900px;
		margin: 0 auto;
	}

	.side-title {
		flex: 0 0 auto;
		padding-right: 16px;
		border-right: 4px solid var(--pimento);
		text-align: center;
	}

	.side-content {
		flex: 1;
		text-align: center;
	}

	@media (max-width: 768px) {
		.side-title-area {
			flex-direction: column;
			gap: 24px;
			align-items: center;
		}

		.side-title {
			padding-right: 0;
			padding-bottom: 16px;
			border-right: none;
			border-bottom: 4px solid var(--pimento);
			width: 100%;
			text-align: center;
		}

		.side-title h2 {
			font-size: 28px;
			line-height: 36px;
		}

		.side-content {
			width: 100%;
			text-align: center;
		}

		.constrained-full-image {
			border-radius: 4px;
		}
	}

	@media (max-width: 480px) {
		.side-title h2 {
			font-size: 24px;
			line-height: 32px;
		}

		.side-title {
			padding-bottom: 12px;
		}

		.side-content {
			text-align: center;
		}

		.side-content p {
			font-size: 16px;
			line-height: 1.5;
		}
	}
</style>
