---
import { useTranslations } from '../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');
---

<div class="body-block">
	<div class="content-container">
		<div class="side-title-area">
			<div class="side-title">
				<h2 class="side-title-heading">{t('about.values.title')}</h2>
			</div>
			<div class="side-content">
				<h3>{t('about.values.value1')}</h3>
				<div class="spacer-xl"></div>
				<h3>{t('about.values.value2')}</h3>
				<div class="spacer-xl"></div>
				<h3>{t('about.values.value3')}</h3>
				<div class="spacer-xl"></div>
				<h3>{t('about.values.value4')}</h3>
				<div class="spacer-xl"></div>
				<h3>{t('about.values.value5')}</h3>
				<div class="spacer-xl"></div>
				<h3>{t('about.values.value6')}</h3>
				<div class="spacer-xl"></div>
				<h3>{t('about.values.value7')}</h3>
			</div>
		</div>
	</div>
</div>
<div class="spacer-xl"></div>

<style>
	.body-block {
		padding: 80px 0;
	}

	.content-container {
		padding: 0 20px;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}

	.side-title-area {
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: 80px;
		align-items: start;
	}

	.side-title {
		position: sticky;
		top: 120px;
	}

	.side-title-heading {
		font-family: Bitter, serif;
		font-size: 48px;
		font-weight: 700;
		line-height: 1.2;
		color: var(--grey-5);
		margin: 0;
	}

	.side-content h3 {
		font-family: Bitter, serif;
		font-size: 32px;
		font-weight: 400;
		line-height: 1.4;
		color: var(--grey-5);
		margin: 0;
	}

	.spacer-xl {
		height: 64px;
	}

	@media (max-width: 1024px) {
		.body-block {
			padding: 60px 0;
		}

		.side-title-area {
			grid-template-columns: 250px 1fr;
			gap: 60px;
		}

		.side-title-heading {
			font-size: 40px;
		}

		.side-content h3 {
			font-size: 28px;
		}

		.spacer-xl {
			height: 56px;
		}
	}

	@media (max-width: 768px) {
		.body-block {
			padding: 48px 0;
		}

		.content-container {
			padding: 0 16px;
		}

		.side-title-area {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.side-title {
			position: static;
		}

		.side-title-heading {
			font-size: 36px;
		}

		.side-content h3 {
			font-size: 24px;
		}

		.spacer-xl {
			height: 48px;
		}
	}

	@media (max-width: 480px) {
		.body-block {
			padding: 40px 0;
		}

		.side-title-area {
			gap: 32px;
		}

		.side-title-heading {
			font-size: 28px;
		}

		.side-content h3 {
			font-size: 20px;
		}

		.spacer-xl {
			height: 40px;
		}
	}
</style>
