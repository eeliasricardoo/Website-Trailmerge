---
export interface Props {
	content: string;
}

const { content } = Astro.props;
---

<!-- Post Content Section -->
<div class="post-content-wrapper">
	<div class="post-content-container">
		<div class="post-content-body" set:html={content} />
	</div>
</div>

<style>
	.post-content-wrapper {
		width: 100%;
		padding: 0 24px 64px;
		background: transparent;
	}

	.post-content-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-content-body {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 18px;
		line-height: 1.7;
	}

	.post-content-body :global(h2),
	.post-content-body :global(h3),
	.post-content-body :global(h4) {
		color: #54504b !important;
		font-family: 'Young Serif', serif !important;
		font-size: 28px !important;
		font-weight: 400 !important;
		line-height: 1.3 !important;
		margin-top: 64px !important;
		margin-bottom: 32px !important;
	}

	.post-content-body :global(h2:first-child),
	.post-content-body :global(h3:first-child),
	.post-content-body :global(h4:first-child) {
		margin-top: 0 !important;
	}

	.post-content-body :global(h3) {
		font-size: 24px !important;
	}

	.post-content-body :global(h4) {
		font-size: 20px !important;
	}

	.post-content-body :global(p) {
		margin: 0 0 24px 0;
	}

	.post-content-body :global(p:last-child) {
		margin-bottom: 0;
	}

	.post-content-body :global(strong) {
		font-weight: 600;
	}

	.post-content-body :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: 8px;
		display: block;
		margin: 40px auto;
	}

	.post-content-body :global(ul),
	.post-content-body :global(ol) {
		margin: 0 0 24px 0;
		padding-left: 24px;
	}

	.post-content-body :global(li) {
		margin: 0 0 12px 0;
	}

	@media (max-width: 768px) {
		.post-content-wrapper {
			padding: 60px 24px;
		}

		.post-content-body {
			font-size: 16px;
		}

		.post-content-body :global(h2),
		.post-content-body :global(h3) {
			font-size: 24px !important;
			margin-top: 48px !important;
		}

		.post-content-body :global(h4) {
			font-size: 20px !important;
			margin-top: 48px !important;
		}
	}

	@media (max-width: 480px) {
		.post-content-wrapper {
			padding: 48px 16px;
		}

		.post-content-body :global(h2),
		.post-content-body :global(h3) {
			font-size: 22px !important;
		}

		.post-content-body :global(h4) {
			font-size: 18px !important;
		}
	}
</style>
