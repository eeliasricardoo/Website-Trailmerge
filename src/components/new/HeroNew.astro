---
import { useTranslations } from '../../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');
---

<section class="hero-new">
	<div class="hero-background">
		<img
			src="/images/new/home/Landscape.svg"
			alt="Landscape illustration"
			class="hero-illustration"
		/>
	</div>
	<div class="hero-content-wrapper">
		<div class="hero-content">
			<h1 class="hero-title">{t('hero.title')}</h1>
			<p class="hero-subtitle">{t('hero.subtitle')}</p>
			<a href="#" class="hero-cta open-modal">{t('hero.cta')}</a>
		</div>
	</div>
</section>

<style>
	.hero-new {
		padding-top: 0;
		padding-bottom: 0;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: var(--off-white);
		position: relative;
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero-illustration {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-content-wrapper {
		position: relative;
		z-index: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: 60px 20px;
		width: 100%;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: 24px;
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
		align-items: center;
	}

	.hero-title {
		font-family: Bitter, serif;
		font-size: 56px;
		font-weight: 700;
		line-height: 1.2;
		color: var(--grey-5);
		margin: 0;
	}

	.hero-subtitle {
		font-family: Bitter, serif;
		font-size: 24px;
		font-weight: 400;
		line-height: 1.5;
		color: var(--grey-4);
		margin: 0;
	}

	.hero-cta {
		display: inline-block;
		background-color: var(--mint);
		color: var(--grey-5);
		padding: 14px 28px;
		border-radius: 4px;
		text-decoration: none;
		font-family: Bitter, serif;
		font-size: 18px;
		font-weight: 700;
		transition: all 0.2s ease;
		box-shadow: 1px 1px 2px rgba(21, 26, 23, 0.2);
		width: fit-content;
	}

	.hero-cta:hover {
		background-color: var(--green-500);
		box-shadow: 2px 2px 5px rgba(21, 26, 23, 0.2);
		transform: translateY(-1px);
	}

	@media (max-width: 1024px) {
		.hero-title {
			font-size: 48px;
		}

		.hero-subtitle {
			font-size: 22px;
		}

		.hero-content-wrapper {
			padding: 40px 20px;
		}
	}

	@media (max-width: 768px) {
		.hero-new {
			min-height: 100vh;
		}

		.hero-title {
			font-size: 36px;
		}

		.hero-subtitle {
			font-size: 20px;
		}

		.hero-content-wrapper {
			padding: 30px 16px;
		}
	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 28px;
		}

		.hero-subtitle {
			font-size: 18px;
		}

		.hero-cta {
			width: 100%;
			text-align: center;
		}
	}
</style>
