---
import { useTranslations } from '../../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');
---

<section class="hero-new">
	<div class="hero-container">
		<div class="hero-content">
			<h1 class="hero-title">{t('hero.title')}</h1>
			<p class="hero-subtitle">{t('hero.subtitle')}</p>
			<a href="#" class="hero-cta open-modal">{t('hero.cta')}</a>
		</div>
		<div class="hero-visual">
			<!-- Hero illustration will go here -->
		</div>
	</div>
</section>

<style>
	.hero-new {
		padding-top: 120px;
		padding-bottom: 80px;
		min-height: calc(100vh - 80px);
		display: flex;
		align-items: center;
		background-color: var(--off-white);
		position: relative;
		overflow: hidden;
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 64px;
		align-items: center;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: 24px;
		z-index: 1;
	}

	.hero-title {
		font-family: Bitter, serif;
		font-size: 56px;
		font-weight: 700;
		line-height: 1.2;
		color: var(--grey-5);
		margin: 0;
	}

	.hero-subtitle {
		font-family: Bitter, serif;
		font-size: 24px;
		font-weight: 400;
		line-height: 1.5;
		color: var(--grey-4);
		margin: 0;
	}

	.hero-cta {
		display: inline-block;
		background-color: var(--mint);
		color: var(--grey-5);
		padding: 14px 28px;
		border-radius: 4px;
		text-decoration: none;
		font-family: Bitter, serif;
		font-size: 18px;
		font-weight: 700;
		transition: all 0.2s ease;
		box-shadow: 1px 1px 2px rgba(21, 26, 23, 0.2);
		width: fit-content;
	}

	.hero-cta:hover {
		background-color: var(--green-500);
		box-shadow: 2px 2px 5px rgba(21, 26, 23, 0.2);
		transform: translateY(-1px);
	}

	.hero-visual {
		position: relative;
		width: 100%;
		height: 500px;
		background-color: var(--mint);
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media (max-width: 1024px) {
		.hero-container {
			gap: 48px;
		}

		.hero-title {
			font-size: 48px;
		}

		.hero-subtitle {
			font-size: 22px;
		}
	}

	@media (max-width: 768px) {
		.hero-new {
			padding-top: 100px;
			padding-bottom: 60px;
			min-height: auto;
		}

		.hero-container {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.hero-content {
			text-align: center;
			align-items: center;
		}

		.hero-title {
			font-size: 36px;
		}

		.hero-subtitle {
			font-size: 20px;
		}

		.hero-visual {
			height: 300px;
		}
	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 28px;
		}

		.hero-subtitle {
			font-size: 18px;
		}

		.hero-cta {
			width: 100%;
			text-align: center;
		}
	}
</style>
