---
import { useTranslations } from '../../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const processSteps = [
	{
		title: 'Consulting & Kickoff',
		description:
			'We listen to your vision for your operational growth and provide guidance for next steps in the journey.',
		image: '/images/new/services/Our Process/Compass.png',
		alt: 'Compass icon',
	},
	{
		title: 'Research & Discovery',
		description:
			'We audit your processes and/or existing systems to identify quick wins and opportunities for system-wide efficiency.',
		image: '/images/Illustration---Magnifying-Glass.png',
		alt: 'Magnifying glass icon',
	},
	{
		title: 'Project Scoping',
		description:
			'Based on our collaborative research and strategy, we define and measure the project to determine Agile-friendly milestones.',
		image: '/images/new/services/Our Process/Map.png',
		alt: 'Map icon',
	},
	{
		title: 'Implementation',
		description:
			"We get to work on designing and developing, using our team's unique blend of skills, best practices, and powerful technologies.",
		image: '/images/new/services/Our Process/MultiTool.png',
		alt: 'Multi-tool icon',
	},
	{
		title: 'Team Integration',
		description:
			"We value proactive communication and close collaboration with your internal team. It's the best way to create the best software!",
		image: '/images/new/services/Our Process/WalkieTalkies.png',
		alt: 'Walkie talkies icon',
	},
	{
		title: 'Delivery & Iteration',
		description:
			'We aim to deliver value continuously, so your company can start benefiting (and celebrating!) as we reach strategic milestones.',
		image: '/images/new/services/Our Process/Skillet.png',
		alt: 'Skillet icon',
	},
];
---

<section class="process-wrapper">
	<div class="process-container">
		<div class="process-header">
			<h2 class="section-title">Our Process</h2>
			<p class="section-description">
				Our methodology is based on <strong>design thinking and Agile</strong> principals, emphasizing
				rapid learning, deep understanding, and flexibility. We don't just create high-quality screens
				and workflows. We design and develop <strong
					>well-built, usable tools that truly solve the core problems</strong
				> your business is facing, because, otherwise, what's the point?
			</p>
		</div>

		<div class="process-grid">
			{
				processSteps.map((step, index) => (
					<div class="process-card">
						<div class="icon-wrapper">
							<img src={step.image} alt={step.alt} width="120" height="120" class="process-icon" />
						</div>
						<h3 class="process-title">{step.title}</h3>
						<p class="process-description">{step.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.process-wrapper {
		width: 100%;
		padding: 80px 20px 120px 20px;
		position: relative;
	}

	.process-container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}

	.process-header {
		max-width: 800px;
		margin: 0 auto 80px auto;
		text-align: center;
	}

	.section-title {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 56px;
		font-weight: 400;
		margin-bottom: 24px;
	}

	.section-description {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 18px;
		line-height: 1.6;
	}

	.process-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		column-gap: 40px;
		row-gap: 80px;
	}

	.process-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 16px;
	}

	.icon-wrapper {
		margin-bottom: 16px;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.process-icon {
		width: 120px;
		height: 120px;
		object-fit: contain;
	}

	.process-title {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 24px;
		font-weight: 400;
		margin: 0;
	}

	.process-description {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 16px;
		line-height: 1.5;
		margin: 0;
	}

	@media (max-width: 900px) {
		.process-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 600px) {
		.process-grid {
			grid-template-columns: 1fr;
		}

		.section-title {
			font-size: 40px;
		}
	}
</style>
