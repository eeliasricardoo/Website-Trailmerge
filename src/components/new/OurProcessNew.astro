---
import { useTranslations } from '../../i18n/utils';

export interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const processSteps = [
	{
		title: t('servicesNew.process.steps.step1.title'),
		description: t('servicesNew.process.steps.step1.description'),
		image: '/images/new/services/Our Process/Compass.png',
		alt: t('servicesNew.process.steps.step1.alt'),
	},
	{
		title: t('servicesNew.process.steps.step2.title'),
		description: t('servicesNew.process.steps.step2.description'),
		image: '/images/Illustration---Magnifying-Glass.png',
		alt: t('servicesNew.process.steps.step2.alt'),
	},
	{
		title: t('servicesNew.process.steps.step3.title'),
		description: t('servicesNew.process.steps.step3.description'),
		image: '/images/new/services/Our Process/Map.png',
		alt: t('servicesNew.process.steps.step3.alt'),
	},
	{
		title: t('servicesNew.process.steps.step4.title'),
		description: t('servicesNew.process.steps.step4.description'),
		image: '/images/new/services/Our Process/MultiTool.png',
		alt: t('servicesNew.process.steps.step4.alt'),
	},
	{
		title: t('servicesNew.process.steps.step5.title'),
		description: t('servicesNew.process.steps.step5.description'),
		image: '/images/new/services/Our Process/WalkieTalkies.png',
		alt: t('servicesNew.process.steps.step5.alt'),
	},
	{
		title: t('servicesNew.process.steps.step6.title'),
		description: t('servicesNew.process.steps.step6.description'),
		image: '/images/new/services/Our Process/Skillet.png',
		alt: t('servicesNew.process.steps.step6.alt'),
	},
];
---

<section class="process-wrapper parallax-container">
	<div class="process-container">
		<div class="process-header parallax-layer" data-speed="0.2">
			<h2 class="section-title">{t('servicesNew.process.title')}</h2>
			<p class="section-description" set:html={t('servicesNew.process.description')} />
		</div>

		<div class="process-grid">
			{
				processSteps.map((step, index) => (
					<div
						class="process-card parallax-layer"
						data-speed={(0.4 + (index % 3) * 0.1).toFixed(2)}
					>
						<div class="icon-wrapper">
							<img src={step.image} alt={step.alt} width="120" height="120" class="process-icon" />
						</div>
						<h3 class="process-title">{step.title}</h3>
						<p class="process-description">{step.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.process-wrapper {
		width: 100%;
		padding: 80px 20px 120px 20px;
		position: relative;
	}

	.process-container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}

	.process-header {
		max-width: 800px;
		margin: 0 auto 80px auto;
		text-align: center;
	}

	.section-title {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 56px;
		font-weight: 400;
		margin-bottom: 24px;
	}

	.section-description {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 18px;
		line-height: 1.6;
	}

	.process-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		column-gap: 40px;
		row-gap: 80px;
	}

	.process-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 16px;
	}

	.icon-wrapper {
		margin-bottom: 16px;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.process-icon {
		width: 120px;
		height: 120px;
		object-fit: contain;
	}

	.process-title {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 24px;
		font-weight: 400;
		margin: 0;
	}

	.process-description {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 16px;
		line-height: 1.5;
		margin: 0;
	}

	@media (max-width: 900px) {
		.process-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 600px) {
		.process-grid {
			grid-template-columns: 1fr;
		}

		.section-title {
			font-size: 40px;
		}
	}
</style>
