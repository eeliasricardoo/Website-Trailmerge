---
export interface Props {
	author: {
		name: string;
		image: string;
		bio: string;
	};
	lang?: string;
}

const { author, lang = 'en' } = Astro.props;
const authorLabel = lang === 'es' ? 'Autor' : 'Author';
---

<!-- Post Author Section -->
<div class="post-author-wrapper">
	<div class="post-author-container">
		<div class="post-author-divider"></div>
		<div class="post-author-content">
			<img src={author.image} alt={author.name} class="post-author-image" loading="lazy" />
			<div class="post-author-info">
				<span class="post-author-label">{authorLabel}</span>
				<h2 class="post-author-name">{author.name}</h2>
				<p class="post-author-bio">{author.bio}</p>
			</div>
		</div>
	</div>
</div>

<style>
	.post-author-wrapper {
		width: 100%;
		padding: 0 24px 80px;
		background: transparent;
	}

	.post-author-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-author-divider {
		width: 100%;
		height: 1px;
		background: rgba(84, 80, 75, 0.2);
		margin-bottom: 40px;
	}

	.post-author-content {
		display: flex;
		gap: 32px;
		align-items: center;
	}

	.post-author-image {
		width: 211.586px;
		height: 234.968px;
		min-width: 211.586px;
		object-fit: contain;
		display: block;
	}

	.post-author-info {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 12px;
	}

	.post-author-label {
		color: #54504b;
		text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.25);
		font-family: 'DM Sans', sans-serif;
		font-size: 24px;
		font-style: normal;
		font-weight: 400;
		line-height: 32px;
		margin-bottom: 8px;
		display: block;
	}

	.post-author-name {
		color: #54504b;
		text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.25);
		font-family: 'Young Serif', serif;
		font-size: 40px;
		font-style: normal;
		font-weight: 400;
		line-height: 48px;
		letter-spacing: 1.2px;
		margin: 0 0 16px 0;
	}

	.post-author-bio {
		color: #54504b;
		text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.25);
		font-family: 'DM Sans', sans-serif;
		font-size: 24px;
		font-style: normal;
		font-weight: 400;
		line-height: 32px;
		margin: 0;
	}

	@media (max-width: 768px) {
		.post-author-wrapper {
			padding: 60px 24px;
		}

		.post-author-content {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.post-author-image {
			width: 150px;
			height: 150px;
			min-width: 150px;
		}

		.post-author-name {
			font-size: 32px;
		}

		.post-author-bio {
			font-size: 16px;
		}
	}

	@media (max-width: 480px) {
		.post-author-wrapper {
			padding: 48px 16px;
		}

		.post-author-image {
			width: 120px;
			height: 120px;
			min-width: 120px;
		}

		.post-author-name {
			font-size: 28px;
		}
	}
</style>
