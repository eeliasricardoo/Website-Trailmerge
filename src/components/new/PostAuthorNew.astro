---
export interface Props {
	author: {
		name: string;
		image: string;
		bio: string;
	};
}

const { author } = Astro.props;
---

<!-- Post Author Section -->
<div class="post-author-wrapper">
	<div class="post-author-container">
		<div class="post-author-divider"></div>
		<div class="post-author-content">
			<img src={author.image} alt={author.name} class="post-author-image" loading="lazy" />
			<div class="post-author-info">
				<h2 class="post-author-name">{author.name}</h2>
				<p class="post-author-bio">{author.bio}</p>
			</div>
		</div>
	</div>
</div>

<style>
	.post-author-wrapper {
		width: 100%;
		padding: 0 24px 80px;
		background: transparent;
	}

	.post-author-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-author-divider {
		width: 100%;
		height: 1px;
		background: rgba(84, 80, 75, 0.2);
		margin-bottom: 40px;
	}

	.post-author-content {
		display: flex;
		gap: 24px;
		align-items: flex-start;
	}

	.post-author-image {
		width: 80px;
		height: 80px;
		min-width: 80px;
		border-radius: 50%;
		object-fit: cover;
		display: block;
	}

	.post-author-info {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 12px;
	}

	.post-author-name {
		color: #54504b;
		font-family: 'Young Serif', serif;
		font-size: 32px;
		font-weight: 400;
		line-height: 1.2;
		margin: 0;
	}

	.post-author-bio {
		color: #54504b;
		font-family: 'DM Sans', sans-serif;
		font-size: 18px;
		line-height: 1.6;
		margin: 0;
	}

	@media (max-width: 768px) {
		.post-author-wrapper {
			padding: 60px 24px;
		}

		.post-author-content {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.post-author-name {
			font-size: 28px;
		}

		.post-author-bio {
			font-size: 16px;
		}
	}

	@media (max-width: 480px) {
		.post-author-wrapper {
			padding: 48px 16px;
		}

		.post-author-image {
			width: 60px;
			height: 60px;
			min-width: 60px;
		}

		.post-author-name {
			font-size: 24px;
		}
	}
</style>
