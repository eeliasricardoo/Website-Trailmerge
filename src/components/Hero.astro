---
// Using public path for the image
---

<!-- Hero Section -->
<div class="body-block hero-wrapper home-hero">
	<!-- Background shapes -->
	<div class="hero-bg-shape hero-bg-shape-1"></div>
	<div class="hero-bg-shape hero-bg-shape-2"></div>
	
	<div class="content-container">
		<div class="hero">
			<div class="hero-content">
				<h1>Elevate your product</h1>
				<div class="spacer-m"></div>
				<h3>Take the path to best-in-class UX and development for SaaS & enterprise apps</h3>
				<div class="spacer-m"></div>
				<a id="hero-contact" href="#" class="open-modal button">Request A Consult</a>
			</div>
		</div>
	</div>
</div>
<div class="hero-illustration-wrapper">
	<div class="hero-illustration"></div>
</div>

<style>
	/* Hero Section */
	.hero-wrapper {
		background-color: var(--off-white);
		padding-top: 80px;
		padding-bottom: 80px;
		min-height: calc(100vh - 80px);
		display: flex;
		align-items: center;
		position: relative;
		overflow: hidden;
	}

	.hero-bg-shape {
		position: absolute;
		border-radius: 50%;
		z-index: 0;
	}

	.hero-bg-shape-1 {
		background-color: var(--aqua-100);
		width: 400px;
		height: 400px;
		top: -100px;
		right: 200px;
		opacity: 0.6;
	}

	.hero-bg-shape-2 {
		background-color: var(--tangerine-100);
		width: 300px;
		height: 300px;
		top: 50px;
		right: 50px;
		opacity: 0.6;
	}

	.hero {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		min-height: 60vh;
		width: 100%;
		position: relative;
		padding-left: 0;
		margin-left: 0;
	}

	.hero-content {
		flex: 1;
		max-width: 600px;
		z-index: 3;
		position: relative;
		text-align: left;
		margin-left: 102.5px; /* Alinha exatamente com a posição do logo */
	}

	.hero-illustration-wrapper {
		justify-content: flex-end;
		width: 100%;
		height: 100%;
		padding-top: 80px;
		display: flex;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1;
	}

	.hero-illustration {
		background-image: url('/images/Hero-Art.png');
		background-position: 16px;
		background-repeat: no-repeat;
		background-size: auto 75%;
		background-attachment: scroll;
		flex: none;
		width: 50%;
		height: 90%;
		padding-top: 0;
	}

	/* Hero text styling */
	.hero h1 {
		color: var(--grey-5);
		margin-top: 0;
		margin-bottom: 0;
		font-family: Bitter, serif;
		font-size: 48px;
		font-weight: 700;
		line-height: 1.2;
	}

	.hero h3 {
		color: var(--grey-5);
		margin-top: 0;
		margin-bottom: 0;
		font-family: Bitter, serif;
		font-size: 28px;
		font-weight: 400;
		line-height: 1.4;
	}

	/* Button styling */
	.hero .button {
		background-color: var(--mint);
		color: var(--grey-5);
		border: none;
		border-radius: 4px;
		padding: 12px 24px;
		font-family: Roboto, sans-serif;
		font-size: 16px;
		font-weight: 500;
		cursor: pointer;
		text-decoration: none;
		display: inline-block;
		transition: background-color 0.2s ease;
	}

	.hero .button:hover {
		background-color: var(--green-500);
		color: var(--white);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.hero-wrapper {
			padding-top: 40px;
			padding-bottom: 60px;
		}

		.hero {
			flex-direction: column;
			justify-content: flex-start;
		}

		.hero-content {
			max-width: 100%;
			margin-bottom: 40px;
			text-align: left;
			margin-left: 20px; /* Padding menor em mobile */
		}

		.hero-illustration {
			background-image: url('/images/Hero-Art.png');
			background-position: 125%;
			background-repeat: no-repeat;
			background-size: auto 240px;
			background-attachment: scroll;
			width: 100%;
			height: 100%;
		}

		.hero-illustration-wrapper {
			height: 240px;
			margin-top: 88px;
			padding-top: 0;
			position: absolute;
		}

		.hero h1 {
			font-size: 36px;
		}

		.hero h3 {
			font-size: 24px;
		}
	}

	@media (max-width: 480px) {
		.hero-content {
			padding: 0 16px;
		}

		.hero h1 {
			font-size: 28px;
		}

		.hero h3 {
			font-size: 20px;
		}

		.hero-illustration-wrapper {
			height: 240px;
			margin-top: 56px;
			padding-top: 0;
			display: block;
			position: absolute;
		}
	}
</style>
