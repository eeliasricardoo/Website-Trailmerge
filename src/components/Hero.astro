---
// Using public path for the image
---

<!-- Hero Section -->
<div class="body-block hero-wrapper home-hero">
	<div class="content-container">
		<div class="hero">
			<div class="flex-half-right">
				<h1>Elevate your product's design</h1>
				<div class="spacer-m"></div>
				<h3>Take the path to best-in-class UX for SaaS & enterprise apps</h3>
				<div class="spacer-m"></div>
				<a id="hero-contact" href="#" class="open-modal button">Request A Consult</a>
			</div>
		</div>
	</div>
</div>
<div class="hero-illustration-wrapper">
	<div class="hero-illustration"></div>
</div>

<style>
	/* Hero Section - Exact Webflow Replication */
	.body-block.hero-wrapper {
		background-image: url('/images/Service-Hero-Graphic.png');
		background-position: 100% 0;
		background-repeat: no-repeat;
		background-size: auto 70%;
		align-items: center;
		height: 80vh;
		min-height: 560px;
		padding-top: 120px;
		position: relative;
	}

	.body-block.hero-wrapper.home-hero {
		background-image: url('/images/Hero-Backdrop.svg');
	}

	.hero-wrapper {
		flex-direction: column;
		align-items: flex-start;
		display: flex;
	}

	.hero {
		z-index: 1;
		justify-content: flex-start;
		width: 100%;
		max-width: 1200px;
		display: block;
		position: relative;
	}

	.flex-half-right {
		text-align: left;
		flex-direction: column;
		flex: none;
		order: 0;
		justify-content: space-between;
		align-items: flex-start;
		width: 50%;
		padding-left: 20px;
		display: flex;
	}

	.hero-illustration-wrapper {
		justify-content: flex-end;
		width: 100%;
		height: 100%;
		padding-top: 64px;
		display: flex;
		position: absolute;
		inset: 0% 0% auto;
	}

	.hero-illustration {
		background-image: url('/images/Hero-Art.png');
		background-position: 16px;
		background-repeat: no-repeat;
		background-size: auto 75%;
		background-attachment: scroll;
		flex: none;
		width: 50%;
		height: 90%;
		padding-top: 0;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.body-block.hero-wrapper {
			padding-top: 112px;
		}

		.hero-illustration {
			background-position: 0;
			background-size: auto 64%;
		}
	}

	@media (max-width: 768px) {
		.body-block {
			padding: 40px 24px;
		}

		.body-block.hero-wrapper {
			height: auto;
			min-height: auto;
			padding-top: 104px;
		}

		.body-block.hero-wrapper.home-hero {
			background-size: auto 50%;
			padding-top: 352px;
		}

		.flex-half-right {
			width: 100%;
			padding-left: 24px;
		}

		.hero-illustration {
			background-image: url('/images/Hero-Art.png');
			background-position: 125%;
			background-repeat: no-repeat;
			background-size: auto 240px;
			background-attachment: scroll;
			width: 100%;
			height: 100%;
		}

		.hero-illustration-wrapper {
			height: 240px;
			margin-top: 88px;
			padding-top: 0;
			position: absolute;
		}
	}

	@media (max-width: 480px) {
		.body-block {
			padding-left: 16px;
			padding-right: 16px;
		}

		.body-block.hero-wrapper {
			background-position: 100% 0;
			background-size: auto 40%;
			min-height: auto;
			padding-top: 88px;
		}

		.body-block.hero-wrapper.home-hero {
			background-size: auto 33%;
			padding-top: 304px;
		}

		.flex-half-right {
			width: 100%;
			padding-left: 16px;
		}

		.hero-illustration {
			background-image: url('/images/Hero-Art.png');
			background-position: 0%;
			background-repeat: repeat;
			background-size: auto 240px;
			width: 100%;
			height: 100%;
		}

		.hero-illustration-wrapper {
			height: 240px;
			margin-top: 56px;
			padding-top: 0;
			display: block;
			position: absolute;
		}
	}
</style>
