// Using public path for the image
---

<!-- Hero Section -->
<div class="body-block hero-wrapper home-hero">
	<div class="content-container">
		<div class="hero">
			<div class="hero-content-left">
				<h1>Elevate your product</h1>
				<div class="spacer-m"></div>
				<h3 class="hero-subtitle">Take the path to best-in-class UX and development for SaaS & enterprise apps</h3>
				<div class="spacer-m"></div>
				<a id="hero-contact" href="#" class="open-modal button hero-cta-button">Request A Consult</a>
			</div>
			<div class="hero-illustration-right">
				<div class="hero-illustration"></div>
			</div>
		</div>
	</div>
</div>

<style>
	/* Hero Section - Clean two-column layout */
	.body-block.hero-wrapper {
		background-color: var(--white);
		align-items: center;
		min-height: 560px;
		padding-top: 120px;
		position: relative;
	}

	.body-block.hero-wrapper.home-hero {
		background-color: var(--white);
	}

	.hero-wrapper {
		flex-direction: column;
		align-items: flex-start;
		display: flex;
	}

	.hero-wrapper .content-container {
		padding: 0 20px;
		display: flex;
		align-items: center;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}

	.hero {
		width: 100%;
		display: flex;
		align-items: center;
		gap: 48px;
		position: relative;
	}

	.hero-content-left {
		flex: 1;
		text-align: left;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: center;
		max-width: 600px;
	}

	.hero-subtitle {
		font-family: Roboto, sans-serif !important;
		font-size: 18px !important;
		font-weight: 400 !important;
		line-height: 1.6 !important;
		color: var(--grey-5) !important;
		margin: 0 !important;
	}

	.hero-cta-button {
		background-color: var(--mint);
		color: var(--grey-5);
		border: 1px solid var(--grey-5);
		border-radius: 4px;
		padding: 12px 24px;
		font-family: Roboto, sans-serif;
		font-size: 16px;
		font-weight: 500;
		transition: background-color 0.2s ease, color 0.2s ease;
	}

	.hero-cta-button:hover {
		background-color: var(--green-500);
		color: var(--white);
		border-color: var(--green-500);
	}

	.hero-illustration-right {
		flex: 1;
		display: flex;
		justify-content: flex-end;
		align-items: center;
		position: relative;
	}

	.hero-illustration {
		background-image: url('/images/Hero-Art.png');
		background-position: center;
		background-repeat: no-repeat;
		background-size: contain;
		width: 100%;
		max-width: 500px;
		height: 400px;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.body-block.hero-wrapper {
			padding-top: 112px;
		}

		.hero {
			gap: 32px;
		}

		.hero-illustration {
			max-width: 400px;
			height: 320px;
		}
	}

	@media (max-width: 768px) {
		.body-block.hero-wrapper {
			padding-top: 104px;
			min-height: auto;
		}

		.hero-wrapper .content-container {
			padding: 0 16px;
		}

		.hero {
			flex-direction: column;
			gap: 32px;
			align-items: center;
		}

		.hero-content-left {
			width: 100%;
			max-width: 100%;
			text-align: center;
			align-items: center;
		}

		.hero-illustration-right {
			width: 100%;
			justify-content: center;
		}

		.hero-illustration {
			max-width: 100%;
			height: 280px;
		}
	}

	@media (max-width: 480px) {
		.body-block.hero-wrapper {
			padding-top: 88px;
		}

		.hero-wrapper .content-container {
			padding: 0 16px;
		}

		.hero-content-left h1 {
			font-size: 36px;
			line-height: 44px;
		}

		.hero-subtitle {
			font-size: 16px;
		}

		.hero-illustration {
			height: 240px;
		}
	}
</style>
