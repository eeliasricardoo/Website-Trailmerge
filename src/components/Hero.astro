---
// Using public path for the image
---

<!-- Hero Section -->
<div class="body-block hero-wrapper home-hero">
	<div class="hero-illustration-wrapper">
		<div class="hero-illustration"></div>
	</div>
	<div class="content-container">
		<div class="hero">
			<div class="hero-content-left">
				<h1>Elevate your product</h1>
				<div class="spacer-m"></div>
				<h3 class="hero-subtitle">Take the path to best-in-class UX for SaaS & enterprise apps</h3>
				<div class="spacer-m"></div>
				<a id="hero-contact" href="#" class="open-modal button hero-cta-button">Request A Consult</a>
			</div>
		</div>
	</div>
</div>

<style>
	/* Hero Section - Clean two-column layout */
	.body-block.hero-wrapper {
		background-image: url('/images/Service-Hero-Graphic.png');
		background-position: 100% 0;
		background-repeat: no-repeat;
		background-size: auto 70%;
		align-items: center;
		height: 80vh;
		min-height: 560px;
		padding-top: 120px;
		position: relative;
	}

	.body-block.hero-wrapper.home-hero {
		background-image: url('/images/Hero-Backdrop.svg');
	}

	.hero-wrapper {
		flex-direction: column;
		align-items: flex-start;
		display: flex;
	}

	.hero-wrapper .content-container {
		padding: 0 20px;
		display: flex;
		align-items: center;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}

	.hero {
		z-index: 1;
		justify-content: flex-start;
		width: 100%;
		max-width: 1200px;
		display: block;
		position: relative;
	}

	.hero-content-left {
		text-align: left;
		flex-direction: column;
		flex: none;
		order: 0;
		justify-content: space-between;
		align-items: flex-start;
		width: 50%;
		display: flex;
		z-index: 1;
	}

	.hero-subtitle {
		font-family: Roboto, sans-serif !important;
		font-size: 18px !important;
		font-weight: 400 !important;
		line-height: 1.6 !important;
		color: var(--grey-5) !important;
		margin: 0 !important;
	}

	.hero-cta-button {
		background-color: var(--mint);
		color: var(--grey-5);
		border: none;
		border-radius: 4px;
		padding: 10px 16px;
		font-family: Roboto, sans-serif;
		font-size: 16px;
		font-weight: 700;
		box-shadow: 1px 1px 2px rgba(21, 26, 23, 0.5);
		transition: all 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
	}

	.hero-cta-button:hover {
		background-color: var(--green-500);
		color: var(--grey-5);
		box-shadow: 2px 2px 5px rgba(21, 26, 23, 0.2);
	}

	.hero-illustration-wrapper {
		justify-content: flex-end;
		width: 100%;
		height: 100%;
		padding-top: 64px;
		display: flex;
		position: absolute;
		inset: 0% 0% auto;
	}

	.hero-illustration {
		background-image: url('/images/Hero-Art.png');
		background-position: 16px;
		background-repeat: no-repeat;
		background-size: auto 75%;
		background-attachment: scroll;
		flex: none;
		width: 50%;
		height: 90%;
		padding-top: 0;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.body-block.hero-wrapper {
			padding-top: 112px;
		}

		.hero {
			gap: 48px;
		}

		.hero-content-left {
			max-width: 480px;
		}

		.hero-illustration {
			max-width: 500px;
			height: 420px;
		}
	}

	@media (max-width: 768px) {
		.body-block.hero-wrapper {
			padding-top: 104px;
			min-height: auto;
		}

		.hero-wrapper .content-container {
			padding: 0 24px;
		}

		.hero {
			flex-direction: column;
			gap: 40px;
			align-items: center;
		}

		.hero-content-left {
			width: 100%;
			max-width: 100%;
			text-align: center;
			align-items: center;
		}

		.hero-illustration-wrapper {
			width: 100%;
			justify-content: center;
		}

		.hero-illustration {
			max-width: 100%;
			height: 350px;
			background-position: center center;
		}
	}

	@media (max-width: 480px) {
		.body-block.hero-wrapper {
			padding-top: 88px;
			padding-bottom: 40px;
		}

		.hero-wrapper .content-container {
			padding: 0 16px;
		}

		.hero {
			gap: 32px;
		}

		.hero-content-left h1 {
			font-size: 32px;
			line-height: 40px;
		}

		.hero-subtitle {
			font-size: 16px !important;
			line-height: 1.5 !important;
		}

		.hero-illustration {
			max-width: 100%;
			height: 300px;
			background-position: center center;
		}
	}
</style>
