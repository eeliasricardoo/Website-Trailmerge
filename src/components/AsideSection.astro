---
import { useTranslations } from '../i18n/utils';

export interface Props {
	title?: string;
	text?: string;
	showBannerTags?: boolean;
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const { title, text = t('aside.text'), showBannerTags = true } = Astro.props;
---

<!-- Aside Section -->
<div class="body-block aside-wrapper">
	<div class="aside-center-container">
		<div class="aside-center">
			<div class="div-block-17">
				{title && <h2 class="aside-title">{title}</h2>}
				<p class="light-text">{text}</p>
			</div>
		</div>
		{
			showBannerTags && (
				<>
					<div class="ribbon-right-container">
						<img
							src="/images/BannerTag.png"
							loading="lazy"
							width="85"
							alt="Decorative ribbon banner"
						/>
					</div>
					<div class="ribbon-left-container">
						<img
							src="/images/BannerTagLeft.png"
							loading="lazy"
							width="85"
							alt="Decorative ribbon banner"
						/>
					</div>
				</>
			)
		}
	</div>
</div>

<style>
	.ribbon-right-container img,
	.ribbon-left-container img {
		display: block;
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.25)) brightness(0) saturate(100%) invert(27%)
			sepia(8%) saturate(300%) hue-rotate(15deg) brightness(0.88);
	}

	.aside-center-container {
		position: relative;
	}

	.aside-center {
		position: relative;
		z-index: 2;
	}

	.aside-title {
		color: var(--white);
		font-family: 'Young Serif', serif;
		font-size: 40px;
		font-weight: 400;
		line-height: 1.3;
		margin: 0;
		text-align: center;
		letter-spacing: 0.5px;
	}

	.aside-wrapper {
		margin-top: 0;
	}

	@media (max-width: 768px) {
		.ribbon-right-container,
		.ribbon-left-container {
			display: none;
		}

		.aside-title {
			font-size: 32px;
			margin-bottom: 16px;
		}

		.aside-wrapper {
			margin-top: 0;
			padding-top: 0;
		}

		.aside-center {
			padding: 32px 24px;
		}
	}

	@media (max-width: 480px) {
		.aside-title {
			font-size: 28px;
			margin-bottom: 12px;
		}

		.aside-wrapper {
			margin-top: 0;
		}

		.aside-center {
			padding: 32px 24px;
		}
	}
</style>
